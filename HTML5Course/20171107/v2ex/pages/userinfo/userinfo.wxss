.info-box {
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  text-align: center;
  border-bottom: 5px solid #EFEFF3;
}
.info-box .info-image {
  width: 48px;
  height: 48px;
  margin-top: 20px;
  margin-bottom: 20px;
}
.info-box .info-text {
  display: block;
  margin: 10px;
}

.post-box {
  flex-direction: column;
  flex-wrap: wrap;
  border-bottom: 5px solid #EFEFF3;
}
.post-box .post-title-box {
  margin: 5px;
}
.post-box .post-title-box .title {
  font-size: 17px;
}
.post-reply-box {
  display: flex;
  flex-basis: 100%;
  justify-content: space-between;
  margin: 5px;  
}
.post-reply-box .post-reply {
  font-size: 13px;
  color: #888;
}
.post-reply-box .post-node {
  font-size: 13px;
  color: #888;
  border: 1px solid;
  border-radius: 3px;
  padding-left: 5px;
  padding-right: 5px;
}