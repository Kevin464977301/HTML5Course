.nav{
    width:100%;height:100rpx;display:flex;flex-direction:row;
}
.default{
    line-height:100rpx;text-align:center;flex:1;border-right:1px solid gainsboro;color:#000;font-weight:bold;font-size:40rpx;
}
.red{
    line-height:100rpx;text-align:center;color:#34B457;flex:1;border-right:1px solid gainsboro;font-weight:bold;font-size:40rpx;
}
.show{
    display:block;
}
.hidden{
    display:none;
}
.postBox{
    flex-direction:column;flex-wrap:wrap;border-bottom:5px solid #EFEFF3;
}
.postMemberBox{
    flex-basis: 100%; display: flex;margin:5px;
}
.postAvatar{
    width:24px;height:24px;margin-right:5px;
}
.postMember{
    width:20%;font-size:14px;color:#888
}
.postTitleBox{
    margin:5px;
}
.postTitle{
    font-size:17px;
}
.postReplyBox{
    flex-basis: 100%; display: flex;justify-content: space-between;margin:5px;
}
.postReply{
    font-size:13px;color:#888
}
.postNode{
    font-size:13px;color:#888;border:solid 1px;border-radius:3px;padding-left:5px;padding-right:5px
}
