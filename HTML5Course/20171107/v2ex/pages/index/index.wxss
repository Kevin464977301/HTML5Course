.common-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.common-box .common-text {
  color: #4ABC6A;
  font-size: 17px;
  font-weight: bold;
  height: 30px;
}
.common-box .post-box {
  flex-direction: column;
  flex-wrap: wrap;
  border-bottom: 5px solid #EFEFF3;
}
.common-box .post-member-box {
  flex-basis: 100%;
  display: flex;
  margin: 5px;
}
.common-box .post-member-box .post-avatar {
  width: 24px;
  height: 24px;
  margin-right: 5px;
}
.common-box .post-member {
  width: 20%;
  font-size: 14px;
  color: #888;
}
.common-box .post-title-box {
  margin: 5px;
}
.common-box .post-title-box .post-title {
  font-size: 17px;
}
.common-box .post-reply-box {
  display: flex;
  flex-basis: 100%;
  justify-content: space-between;
  margin: 5px;
}
.common-box .post-reply-box .post-reply {
  font-size: 13px;
  color: #888;
}
.common-box .post-reply-box .post-node {
  font-size: 13px;
  color: #888;
  border: 1px solid;
  border-radius: 3px;
  padding-left: 5px;
  padding-right: 5px;
}